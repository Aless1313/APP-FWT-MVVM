            <Label Text="Usuario" 
                   FontSize="30" 
                   TextColor="Black" 
                   AbsoluteLayout.LayoutBounds=".5,170" 
                   AbsoluteLayout.LayoutFlags="XProportional"></Label>
            <Label Text="Correo"
                   FontSize="15"
                   TextColor="#3C3B3B"
                   AbsoluteLayout.LayoutBounds="10,.4"
                   AbsoluteLayout.LayoutFlags="YProportional"></Label>
            <Label Text="andresdeblas@hotmail.com"
